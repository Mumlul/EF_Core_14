<Page x:Class="EF_Core.Pages.User_Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:EF_Core.Pages"
      xmlns:validations="clr-namespace:EF_Core.Rules.Validations"
      xmlns:convertors="clr-namespace:EF_Core.Rules.Convertors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User_Profile"
      Background="White"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Text="Данные" MouseDown="Go_back"/>
        </StackPanel>
        
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            
            
            <!-- Правое меню (фото профиля)-->
            <Grid Grid.Column="1">
                
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Border Width="100" Height="100"
                    CornerRadius="20"
                    ClipToBounds="True">
                    <Image Source="{Binding Avaterlurl,UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" />
                </Border>
                <Button Grid.Row="1" Content="Edit" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Select_Avaterurl"/>   
            </Grid>

            <!--Левая часть с информацией-->
            <StackPanel Orientation="Vertical">
                <StackPanel>
                    <Label Content="Номер телефона"/>
                    <TextBox Name="Phone">
                        <TextBox.Text>
                            <Binding Path="Phone" UpdateSourceTrigger="PropertyChanged"  StringFormat=" {0:000 000 00 00}">
                                <Binding.Converter>
                                    <convertors:Phone/>
                                </Binding.Converter>
                                <Binding.ValidationRules>
                                    <validations:Empty/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=Phone,Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel>
                    <Label Content="День рождения"/>
                    <DatePicker Name="BirthDate" materialDesign:HintAssist.Hint="Дата рождения">
                        <DatePicker.SelectedDate>
                            <Binding Path="BirthDay">
                                <Binding.ValidationRules>
                                    <validations:Empty/>
                                    <validations:Date/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DatePicker.SelectedDate>
                    </DatePicker>
                    <ItemsControl ItemsSource="{Binding ElementName=BirthDate,Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel>
                    <Label Content="Bio"/>
                    <TextBox Name="Bio" TextWrapping="Wrap" Height="60" >
                        <TextBox.Text>
                            <Binding Path="BIO" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validations:Empty/>
                                    <validations:TextRules/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=Bio,Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Style="{StaticResource Button_stack}">
            <Button Content="Сохранить" Click="Save"/>
            <Separator Width="10" Visibility="Hidden"/>
            <Button Content="Назад" Click="Go_back"/>
        </StackPanel>
    </Grid>
</Page>
