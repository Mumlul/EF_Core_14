<Page x:Class="EF_Core.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_Core.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Background="White"
      >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" >
            <Label Content="Roles" MouseDoubleClick="View_Roles" HorizontalAlignment="Center"/>
            <Label Content="Groups" MouseDoubleClick="View_Groups" HorizontalAlignment="Center"/>
        </StackPanel>
        
        
        <ListView Grid.Row="1" Grid.Column="1"
                  SelectedItem="{Binding user}"
                  MouseDoubleClick="Edit"
                  ItemsSource="{Binding service.Users}"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding Login,UpdateSourceTrigger=PropertyChanged}"/>
                            <Separator Height="10" Visibility="Hidden"/>
                            <TextBlock>
                                <Run Text="Роль:"/>
                                <Run Text="{Binding Role.Title,UpdateSourceTrigger=PropertyChanged}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Column="1" Grid.Row="2" Style="{StaticResource Button_stack}">
            <Button Content="Add" Click="Add_user"/>
        </StackPanel>
    </Grid>
</Page>
