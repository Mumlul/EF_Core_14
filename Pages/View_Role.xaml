<Page x:Class="EF_Core.Pages.View_Role"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EF_Core.Pages"
      xmlns:services="clr-namespace:EF_Core.Models.Service"
      xmlns:validations="clr-namespace:EF_Core.Rules.Validations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="View_Role"
      Background="White"
      >
    
    <Page.Resources>
        <services:RoleService x:Key="role_Service"/>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!--Левая часть-->
            <StackPanel Grid.Column="0">
                <ListView ItemsSource="{Binding Source={StaticResource role_Service},Path=Roles}"
                          SelectedItem="{Binding test,UpdateSourceTrigger=PropertyChanged}"
                          MouseDoubleClick="View_Users_List">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding Title}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            

            <!--Правая часть-->
            <StackPanel Grid.Column="1" x:Name="Add_role_place">
                <Label>Название роли</Label>
                <TextBox x:Name="Title">
                    <TextBox.Text>
                        <Binding Path="Title" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validations:Empty/>
                                <validations:TextRules/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=Title,Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Column="1" Grid.Row="2" Style="{StaticResource Button_stack}">
            <Button Content="Добавить" Click="Add_Role"/>
            <Separator Width="10" Visibility="Hidden"/>
            <Button Content="Удалить" Click="Delete_Role"/>
            <Separator Width="10" Visibility="Hidden"/>
            <Button Content="Назад" Click="Go_back"/>
        </StackPanel>
    </Grid>
</Page>
